<config>
    <global>
        <log>
            <file>app.log</file>
        </log>
        <base_domain>fw.loc</base_domain>
        <db>
            <default>
                <type>mysql</type>
                <host>127.0.0.1</host>
                <port>3306</port>
                <user>root</user>
                <password>root</password>
                <dbname>magelight</dbname>
                <persistent>1</persistent>
                <init_connect>SET NAMES utf8 COLLATE utf8_general_ci</init_connect>
            </default>
        </db>
        <cache>
            <default>
                <memcache>
                    <server>
                        <host>127.0.0.1</host>
                        <port>11211</port>
                    </server>
                </memcache>
            </default>
            <other>
                <file>
                    <path>var/cache</path>
                </file>
            </other>
        </cache>
    </global>
</config>