<routes>
    <Admin>
        <route match="/" controller="index" action="index" />
        <route match="/admin" controller="admin">
            <route match="/user/{id}" controller="user" rank="1">
                <route match="/list" action="list" />
                <route match="/edit" action="edit" />
                <route match="/save" action="save" />    
            </route>
        </route>
    </Admin>
</routes>