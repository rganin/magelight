<?php


namespace Validation\Rules;

class Max extends AbstractRule{

    public static function check($value, $args)
    {
        if (isset($args[0])) {
            return $value <= $args[0];
        }
        return false;
    }

    public static function getError()
    {
        return \L::tc('Field %0 souldn`t be more than %1', 'validation');
    }
}