<?php

namespace Validation\Rules;

class Min extends AbstractRule{

    public static function check($value, $args)
    {
        if (isset($args[0])) {
            return $value >= $args[0];
        }
        return false;
    }

    public static function getError()
    {
        return \L::tc('Field %0 shouldn`t be less than %1', 'validation');
    }
}