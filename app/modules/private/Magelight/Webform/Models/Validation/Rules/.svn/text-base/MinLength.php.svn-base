<?php

namespace Validation\Rules;

class MinLength extends AbstractRule{

    public static function check($value, $args)
    {
        if (isset($args[0])) {
        	
            return mb_strlen($value) >= $args[0];
        }
        return false;
    }

    public static function getError()
    {
        return \L::tc('Field %0 shouldn`t be shorter than %1', 'validation');
    }
}